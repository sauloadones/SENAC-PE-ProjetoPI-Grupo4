<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:layout_marginHorizontal="8dp"
    android:elevation="4dp"
    android:padding="12dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView android:id="@+id/textTipo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tipo de Requisição"
            android:textStyle="bold"
            android:textSize="16sp"/>

        <TextView android:id="@+id/textStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Status" />

        <TextView android:id="@+id/textData"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Data" />

        <TextView android:id="@+id/textPilar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pilar" />

        <TextView android:id="@+id/textSolicitante"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Solicitante" />

    </LinearLayout>
</androidx.cardview.widget.CardView>
