<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradient"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Título da requisição -->
        <TextView
            android:id="@+id/tvTituloTopo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Solicitação do Apoio"
            android:textColor="#AAAAAA"
            android:textSize="14sp"
            android:layout_marginBottom="8dp" />

        <!-- Pilar -->
        <TextView
            android:id="@+id/tvPilar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#1D5A93"
            android:padding="10dp"
            android:text="1° Pilar: ..."
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginBottom="16dp" />

        <!-- Nome -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nome:"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:id="@+id/tvNome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#444444"
            android:textColor="#FFFFFF"
            android:padding="8dp"
            android:layout_marginBottom="12dp" />

        <!-- Descrição -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Descrição:"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:id="@+id/tvDescricao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#444444"
            android:textColor="#CCCCCC"
            android:padding="8dp"
            android:layout_marginBottom="16dp" />

        <TextView
            android:id="@+id/tvPrioridadeBox"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Prioridade:"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="4dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tvPrioridade"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#CCCCCC"
            android:layout_marginBottom="16dp"
            android:visibility="gone" />


        <!-- Prazo (ação) -->
        <TextView
            android:id="@+id/tvPrazo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Prazo da ação: ..."
            android:textColor="#CCCCCC"
            android:layout_marginBottom="12dp"
            android:visibility="gone" />

        <!-- Data de início (atividade) -->
        <TextView
            android:id="@+id/tvDataInicio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Data de início: ..."
            android:textColor="#CCCCCC"
            android:layout_marginBottom="8dp"
            android:visibility="gone" />

        <!-- Data de finalização (atividade completa) -->
        <TextView
            android:id="@+id/tvDataFinal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Finalizada em: ..."
            android:textColor="#CCCCCC"
            android:layout_marginBottom="12dp"
            android:visibility="gone" />


        <!-- Responsáveis -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Responsáveis:"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="4dp"/>
        <TextView
            android:id="@+id/tvResponsaveis"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#CCCCCC"
            android:layout_marginBottom="24dp" />



        <!-- Botões -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/btnRecusar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Recusar"
                android:backgroundTint="#AAAAAA"
                android:textColor="#FFFFFF"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/btnAceitar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Aprovar"
                android:backgroundTint="#1D5A93"
                android:textColor="#FFFFFF"
                android:layout_marginStart="8dp" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
