<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:padding="12dp"
    android:elevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView android:id="@+id/textTipo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tipo da requisição" />

        <TextView android:id="@+id/textStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Status" />

        <TextView android:id="@+id/textCoordenador"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Coordenador" />

        <TextView android:id="@+id/textDataResposta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Data da resposta" />
    </LinearLayout>
</androidx.cardview.widget.CardView>
