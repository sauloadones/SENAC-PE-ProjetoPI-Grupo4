<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bg_dialog"
    android:padding="16dp"
    android:elevation="8dp">

    <!-- Cabeçalho -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tituloDialogPrioridade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Níveis de Prioridade"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/fecharDialogPrioridade"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_close"
            app:tint="#FFFFFF" />
    </RelativeLayout>

    <!-- Opções de Prioridade -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardPrioridadeBaixa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:cardCornerRadius="8dp"
        app:cardBackgroundColor="#2ECC40">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:text="Prioridade Baixa"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:textAlignment="center"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardPrioridadeMedia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        app:cardCornerRadius="8dp"
        app:cardBackgroundColor="#F1C40F">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:text="Prioridade Média"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textAlignment="center"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardPrioridadeAlta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        app:cardCornerRadius="8dp"
        app:cardBackgroundColor="#E74C3C">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:text="Prioridade Alta"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:textAlignment="center"/>
    </androidx.cardview.widget.CardView>

</LinearLayout>
