<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/containerNotificacao"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="10dp"
    android:background="@drawable/bg_notificacao_estilizado"
    android:layout_marginHorizontal="12dp"
    android:layout_marginVertical="6dp">

    <!-- Ícone dinâmico de status -->
    <ImageView
        android:id="@+id/iconStatus"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="12dp"
        android:src="@drawable/ic_help"
        app:tint="@android:color/darker_gray" />

    <!-- Conteúdo de texto -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textoTitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Título dinâmico"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF" />

        <TextView
            android:id="@+id/textoMensagem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mensagem descritiva da requisição"
            android:textSize="13sp"
            android:textColor="#CCCCCC"
            android:layout_marginTop="2dp"/>
    </LinearLayout>
</LinearLayout>
