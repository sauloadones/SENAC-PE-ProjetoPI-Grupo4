<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/customBottomNav"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="#252525"
    android:elevation="8dp">

    <!-- Container dos itens -->
    <LinearLayout
        android:id="@+id/navItemsContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingHorizontal="12dp"
        android:paddingVertical="12dp">

        <!-- Relatório -->
        <LinearLayout
            android:id="@+id/nav_relatorio"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackground">

            <ImageView
                android:id="@+id/icon_relatorio"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/nav_relatorio_icon"
                android:contentDescription="Relatório"
                app:tint="@color/nav_text_selector" />

            <TextView
                android:id="@+id/text_relatorio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="Relatório"
                android:textColor="@color/nav_text_selector"
                android:textSize="13sp" />
        </LinearLayout>

        <!-- Dashboard -->
        <LinearLayout
            android:id="@+id/nav_dashboard"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackground">

            <ImageView
                android:id="@+id/icon_dashboard"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/nav_dashboard_icon"
                android:contentDescription="Dashboard"
                app:tint="@color/nav_text_selector" />

            <TextView
                android:id="@+id/text_dashboard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="Dashboard"
                android:textColor="@color/nav_text_selector"
                android:textSize="13sp" />
        </LinearLayout>

        <!-- Home -->
        <LinearLayout
            android:id="@+id/nav_home"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackground">

            <ImageView
                android:id="@+id/icon_home"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/nav_home_icon"
                android:contentDescription="Início"
                app:tint="@color/nav_text_selector" />

            <TextView
                android:id="@+id/text_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="Início"
                android:textColor="@color/nav_text_selector"
                android:textSize="13sp" />
        </LinearLayout>

        <!-- Perfil -->
        <LinearLayout
            android:id="@+id/nav_perfil"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackground">

            <ImageView
                android:id="@+id/icon_perfil"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/nav_perfil_icon"
                android:contentDescription="Perfil"
                app:tint="@color/nav_text_selector" />

            <TextView
                android:id="@+id/text_perfil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="Perfil"
                android:textColor="@color/nav_text_selector"
                android:textSize="13sp" />
        </LinearLayout>
    </LinearLayout>

    <!-- Indicador visual ajustado -->
    <View
        android:id="@+id/indicatorSlider"
        android:layout_width="30dp"
        android:layout_height="4dp"
        android:layout_gravity="bottom"
        android:layout_marginBottom="68dp"
        android:background="@drawable/indicador_nav"
        android:translationX="0dp" />
</FrameLayout>
